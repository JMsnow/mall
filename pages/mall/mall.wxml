<view class="container">
    <swiper indicator-dots="{{indicatorDots}}" indicator-color="{{indicatorColor}}" indicator-active-color="{{indicatorActiveColor}}"
        autoplay="{{autoplay}}" current="{{curIndex}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}"
        bindchange="swipeChange">
        <block wx:for="{{imgUrls}}" wx:key="{{index}}">
            <swiper-item>
                <image src="{{item}}" mode="aspectFill" class="slideImg" />
            </swiper-item>
        </block>
    </swiper>
</view>